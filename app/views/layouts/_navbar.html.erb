<%= render NavbarComponent.new(sticky: true) do |navbar| %>
  <% navbar.with_header do %>
    <a href="<%= root_path %>" class="flex items-center">
      <svg class="w-6 h-6" fill="currentColor" viewBox="0 0 20 20" xmlns="http://www.w3.org/2000/svg">
        <path d="M13.586 3.586a2 2 0 112.828 2.828l-.793.793-2.828-2.828.793-.793zM11.379 5.793L3 14.172V17h2.828l8.38-8.379-2.83-2.828z"></path>
      </svg>
      <span class="self-center mx-2 text-xl font-semibold whitespace-nowrap dark:text-white">PnP World</span>
    </a>
  <% end %> %>
  <%= navigation_buttons.each do |btn| %>
    <% navbar.with_link do %>
      <%= render NavbarButtonComponent.new(active: current_page?(btn.link), href: btn.link) do %>
        <%= btn.text %>
      <% end %>
    <% end %>
  <% end %>
<% end %>