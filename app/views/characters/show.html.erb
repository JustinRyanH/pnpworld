<%= turbo_frame_tag "modal" do %>
  <%= render ModalComponent.new(label_id: 'character-header') do |modal| %>
    <% modal.with_header do %>
      <%= render HeaderComponent.new(id: 'characters-header') do %>
        Character
      <% end %>
    <% end %> %>
    <% modal.with_body do %>
      Name: <%= @character.name %>
    <% end %>

    <% modal.with_footer do %>
      <%= button_to "Destroy this character", @character, method: :delete %>
    <% end %>
  <% end %>
<% end %>