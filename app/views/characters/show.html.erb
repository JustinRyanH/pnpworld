<%= turbo_frame_tag "modal" do %>
  <%= render ModalComponent.new(id: "#{dom_id(@character)}_show", label_id: 'character-header') do |modal| %>
    <% modal.with_header do %>
      <%= render HeaderComponent.new(level: 2, id: 'characters-header') do %>
        <%= @character.name %>
      <% end %>
    <% end %> %>
    <% modal.with_body do %>
      Placeholder Stuff
    <% end %>

    <% modal.with_footer do %>
      <%= button_to "Destroy this character", @character, method: :delete %>
    <% end %>
  <% end %>
<% end %>